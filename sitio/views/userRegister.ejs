<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <div class="container">
      <section class="login">
        <div class="row productos">
          <div class="titulo col-12">

            <h2><%= title %></h2>

          </div>
          <div class="col-12">
            <div class="contenido">
              <div class="row py-3 px-5">
                <div class="col-12 col-md-5 col-lg-6 col-xl-5 d-flex flex-column justify-content-center">
                  <figure>
                  <img src="/images/logo-mercado-liebre.svg" alt="" class="w-75"/>
                </figure>
                  <section class="mt-5">
                    <form action="" class="text-center" method="POST">
                      <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck1" name="acepta">
                        <label class="custom-control-label" for="customCheck1">acepto las bases y condiciones</label>
                      </div>                  
                    </form>
                    <a href="" class="text-info">ver bases y condiciones</a>

                  </section>
                  
                
                </div>
                <div class="col-12 col-md-7 col-lg-6 col-xl-7 ">
                  <form action="" method="POST">
                    <div class="form-row">
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="nombre"></label>
                        <input type="text" class="form-control" id="nombre"  name="nombre"  value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>" placeholder="nombre"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>
                      </div>
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="apellido"></label>
                        <input type="text" class="form-control" id="apellido" placeholder="apellido" name="apellido"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %> </small>
                      </div>

                    </div>

                    <div class="form-row">
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="email"></label>
                        <input type="email" class="form-control" id="email" placeholder="email" name="email"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
                      </div>
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="ciudad"></label>
                        <input type="text" class="form-control" id="ciudad" placeholder="ciudad" name="ciudad"/>
                      </div>

                    </div>
                    <div class="form-row">
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="pass"></label>
                        <input type="password" class="form-control" id="pass" placeholder="contraseña" name="pass"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>
                      </div>

                      <div class="form-group col-12 col-xl-6">
                        <label for="pass2"></label>
                        <input type="password" class="form-control" id="pass2" placeholder="reingresar contraseña" name="pass2"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.pass2)?errors.pass2.msg: "" %> </small>

                      </div>
                    </div>
                    <div class="form-group mt-3">
                      <button type="submit" class="btn btn-primary">
                        Registrarse
                      </button>
                    </div>
             
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
